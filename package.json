{
	"name": "girls-moments",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "bun db:generate && vite build",
		"preview": "bun run build && wrangler dev",
		"prepare": "husky",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db:start": "docker compose up",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"deploy": "bun run build && wrangler deploy",
		"cf-typegen": "wrangler types ./src/worker-configuration.d.ts",
		"auth:generate": "better-auth generate --config ./src/lib/server/auth/index.ts --output ./src/lib/server/db/schema/auth.ts -y",
		"ui": "bun x shadcn-svelte@latest add -y -o"
	},
	"devDependencies": {
		"@better-auth/cli": "^1.4.15",
		"@better-auth/oauth-provider": "^1.4.15",
		"@better-auth/passkey": "^1.4.15",
		"@better-auth/sso": "^1.4.15",
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.39.1",
		"@internationalized/date": "^3.10.0",
		"@lucide/svelte": "^0.561.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-cloudflare": "^7.2.5",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"@types/node": "^22",
		"@typescript-eslint/parser": "^8.53.0",
		"bits-ui": "^2.14.4",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.45.0",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-compat": "^6.0.2",
		"eslint-plugin-cypress": "^5.2.1",
		"eslint-plugin-github": "^6.0.0",
		"eslint-plugin-html": "^8.1.3",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jest": "^29.12.1",
		"eslint-plugin-n": "^17.23.2",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-sonarjs": "^3.0.5",
		"eslint-plugin-storybook": "^10.1.11",
		"eslint-plugin-svelte": "^3.13.1",
		"eslint-plugin-unicorn": "^62.0.0",
		"eslint-plugin-unused-imports": "^4.3.0",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"mode-watcher": "^1.1.0",
		"prettier": "^3.8.0",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"stylelint": "^17.0.0",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"svelte-sonner": "^1.0.7",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.17",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.1",
		"ultracite": "7.0.11",
		"vite": "^7.2.6",
		"wrangler": "^4.59.2"
	},
	"dependencies": {
		"better-auth": "^1.4.15",
		"postgres": "^3.4.7"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
			"bun x ultracite fix"
		]
	},
	"trustedDependencies": [
		"unrs-resolver"
	]
}
